# PokéAPI Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT=10

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=pokeapi_cache
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ReportPortal Configuration
REPORTPORTAL_ENDPOINT=http://localhost:8080
REPORTPORTAL_PROJECT=pokeapi-tests
REPORTPORTAL_API_TOKEN=your_reportportal_token_here
REPORTPORTAL_LAUNCH_NAME=PokéAPI Tests
REPORTPORTAL_LAUNCH_DESCRIPTION=Automated API tests for PokéAPI
RP_POSTGRES_PASSWORD=rppass
RABBITMQ_PASSWORD=rabbitmq

# Prometheus Configuration
PROMETHEUS_PORT=9090
METRICS_PORT=8000

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Loki Configuration
LOKI_PORT=3100

# Locust Configuration
LOCUST_WEB_PORT=8089
LOCUST_HOST=https://pokeapi.co/api/v2

# pgAdmin Configuration
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@pokeapi.local
PGADMIN_PASSWORD=admin

# Test Configuration
TEST_ENVIRONMENT=local
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_LOGGING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=0.5
CIRCUIT_BREAKER_TIMEOUT=30
CIRCUIT_BREAKER_ENABLED=true

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
RETRY_JITTER_MAX=1

# Performance Baseline
BASELINE_CALCULATION_DAYS=7
BASELINE_DEVIATION_THRESHOLD=0.2

# Flakiness Detection
FLAKY_TEST_RETRY_COUNT=3
FLAKY_TEST_RETRY_DELAY=1
